generator client {
  provider = "prisma-client-js"
  output   = "../lib/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sunscreen {
  id           String   @id @default(uuid())
  name         String
  brand        String
  spf          Int
  description  String?
  imageUrl     String?
  tag          String[]

  skinType     SkinType[] // e.g. oily, dry
  finish       Finish     // e.g. matte, dewy
  isReefSafe   Boolean
  isWaterResistant Boolean
  rating       Float?     // user rating if applicable
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

enum SkinType {
  DRY
  OILY
  COMBINATION
  SENSITIVE
  NORMAL
}

enum Finish {
  MATTE
  DEWY
  NATURAL
  SATIN
}


